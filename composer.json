{
    "name": "sasa-b/command-bus",
    "description": "CommandBus pattern implementation",
    "type": "library",
    "keywords": [
        "php",
        "command-bus"
    ],
    "version": "1.4.0",
    "license": "MIT",
    "authors": [
        {
            "name": "Sasa Blagojevic",
            "email": "sasa.blagojevic@mail.com"
        }
    ],
    "minimum-stability": "stable",
    "autoload": {
        "psr-4": {
            "SasaB\\CommandBus\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SasaB\\CommandBus\\Tests\\": "tests/"
        },
        "files": ["tests/functions.php"]
    },
    "require": {
        "php": ">=8.1",
        "psr/container": "^2.0",
        "psr/log": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "ramsey/uuid": "^4.1",
        "phpstan/phpstan": "*",
        "phpstan/phpstan-phpunit": "^1.0"
    },
    "scripts": {
        "php-cs-fixer": [
            "tools/php-cs-fixer/vendor/bin/php-cs-fixer fix --allow-risky=yes"
        ],
        "phpstan": [
            "php -d memory_limit=4G vendor/bin/phpstan analyse src tests --configuration=tools/phpstan/phpstan.neon.dist"
        ]
    }
}
